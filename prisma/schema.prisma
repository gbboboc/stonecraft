generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String   @id @default(cuid())
  name        String
  description String
  slug        String   @unique
  imageUrl    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sculptures  Sculpture[]
}

model Sculpture {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  imageUrl    String
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  features    String[]
  dimensions  Json
  material    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
} 